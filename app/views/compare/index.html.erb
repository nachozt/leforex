<p id="notice"><%= notice %></p>

<%= form_with url: today_path, method: "get", remote: true, class: "form-inline" do |f| %>
  <div class="form-group mb-2 col-md-4">
    <%= label_tag :quantity, 'Quantity:' %>
    <%= f.number_field :quantity, class: "form-control" %>
  </div>
  <div class="form-group mx-sm-3 mb-2 col-md-2">
    <%= label_tag :from, 'From:' %>
    <%= select_tag "from", raw("<option>USD</option>"), class: "form-control" %>
  </div>
  <div class="form-group mx-sm-3 mb-2 col-md-2">
    <%= label_tag :to, 'To:' %>
    <%= select_tag "to", raw("<option>CLP</option>"), class: "form-control" %>
  </div>
  <%= f.submit "Compare", class: "btn btn-primary mb-2 col-md-2" %>
<% end %>

<br>
<div id="institution-rates"></div>
