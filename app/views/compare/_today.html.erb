<h1>Institutions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Fee</th>
      <th>Cost</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @institutions.each do |institution| %>
      <tr>
        <td><%= institution.name %></td>
        <td><%= institution.fee %></td>
        <td><%= dynamic_amount(institution, @conversion_input) %></td>
        <td><%= link_to 'Edit', edit_institution_path(institution) %></td>
        <td><%= link_to 'Destroy', institution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Institution', new_institution_path %>
